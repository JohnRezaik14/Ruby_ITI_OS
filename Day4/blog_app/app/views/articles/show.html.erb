<div class="container">
  <article class="article-detail">
    <% if @article.image? %>
      <%= image_tag @article.image.url, class: "article-image" %>
    <% end %>
    
    <div class="article-content">
      <header class="article-header">
        <div class="article-meta">
          <p>Posted by <%= @article.user.email %></p>
          <p class="article-date"><%= @article.created_at.strftime("%B %d, %Y") %></p>
        </div>
        
        <div class="article-actions">
          <% if user_signed_in? && @article.user == current_user %>
            <%= link_to "Edit", edit_article_path(@article), class: "btn btn-primary" %>
            <%= button_to "Delete", article_path(@article), 
                method: :delete, 
                class: "btn btn-danger", 
                data: { confirm: "Are you sure?" } %>
          <% elsif user_signed_in? %>
            <%= button_to "Report", report_article_path(@article), 
                method: :post, 
                class: "btn btn-danger", 
                data: { confirm: "Are you sure you want to report this article?" } %>
          <% end %>
        </div>
      </header>

      <div class="article-body">
        <%= simple_format(@article.body) %>
      </div>
    </div>
  </article>

  <div class="text-center mt-4">
    <%= link_to "Back to Articles", articles_path, class: "btn" %>
  </div>
</div>
